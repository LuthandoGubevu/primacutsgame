
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow public read access for the leaderboard, high score display,
      // and competitor count.
      allow read: if true;

      // A user can create their own profile document when they sign up.
      // Their authentication UID must match the document ID they are creating.
      allow create: if request.auth.uid == userId;

      // A logged-in user can update their own profile to save new scores.
      allow update: if request.auth.uid == userId;

      // To protect user data, deleting documents from the app is not allowed.
      allow delete: if false;
    }
  }
}
